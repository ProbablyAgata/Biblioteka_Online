@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel administratora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header style="background:linear-gradient(135deg, #4287f5, #0056b3); color:#fff; padding:1rem 0; box-shadow: 0 4px 15px rgba(66, 135, 245, 0.2);">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AdminHome" style="font-weight: 700; color: #fff; display: flex; align-items: center;">
                    <span style="font-size: 1.5rem; margin-right: 8px;">⚙️</span> Panel administratora
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AdminHome" style="color: #fff; font-weight: 600; display: flex; align-items: center;">
                                <span style="font-size: 1rem; margin-right: 5px;">🏠</span> Strona główna
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index" style="color: #fff; font-weight: 600; display: flex; align-items: center;">
                                <span style="font-size: 1rem; margin-right: 5px;">📚</span> Książki
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Borrowings" asp-action="AdminPanel" style="color: #fff; font-weight: 600; display: flex; align-items: center;">
                                <span style="font-size: 1rem; margin-right: 5px;">📋</span> Wypożyczenia
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="GoogleBooksSearch" style="color: #fff; font-weight: 600; display: flex; align-items: center;">
                                <span style="font-size: 1rem; margin-right: 5px;">🔍</span> Google Books
                            </a>
                        </li>
                    </ul>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="btn-logout" style="display: flex; align-items: center; background: rgba(255, 255, 255, 0.2); border: 1px solid white; border-radius: 25px; padding: 8px 16px; color: #fff; font-weight: 600;">
                            <span style="font-size: 1rem; margin-right: 5px;">🚪</span> Wyloguj się
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <div class="admin-panel" style="border: 2px dashed #5aa6ff; border-radius: 20px;">
            @RenderBody()
        </div>
    </div>
    
    <footer class="text-center py-4 mt-5" style="background:#f8fafc; color:#4287f5;">
        <div class="container">
            &copy; 2025 - Biblioteka Online - Panel Administratora <span style="font-size: 1rem; margin: 0 5px;">💙</span>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 