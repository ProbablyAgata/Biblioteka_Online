@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel administratora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header style="background:linear-gradient(135deg, #4287f5, #0056b3); color:#fff; padding:1rem 0; box-shadow: 0 4px 15px rgba(66, 135, 245, 0.2);">
        <div class="container d-flex justify-content-between align-items-center">
            <h2 style="margin:0; color:#fff; font-weight: 700; display: flex; align-items: center;">
                <span style="font-size: 1.5rem; margin-right: 8px;">⚙️</span> Panel administratora
            </h2>
            <div class="d-flex align-items-center">
                <nav class="me-4">
                    <a href="/Home/AdminHome" class="btn me-2" style="background-color: rgba(255, 255, 255, 0.2); color: white; border-radius:25px; font-weight:600; padding: 8px 16px; border: 1px solid white; display: flex; align-items: center;">
                        <span style="font-size: 1rem; margin-right: 5px;">🏠</span> Strona główna
                    </a>
                    <a href="/Borrowings/AdminPanel" class="btn" style="background-color: rgba(255, 255, 255, 0.2); color: white; border-radius:25px; font-weight:600; padding: 8px 16px; border: 1px solid white; display: flex; align-items: center;">
                        <span style="font-size: 1rem; margin-right: 5px;">📋</span> Wypożyczenia
                    </a>
                </nav>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn-logout" style="background: rgba(255, 255, 255, 0.2); display: flex; align-items: center;">
                        <span style="font-size: 1rem; margin-right: 5px;">🚪</span> Wyloguj się
                    </button>
                </form>
            </div>
        </div>
    </header>
    <div class="container mt-4">
        <div class="admin-panel" style="border: 2px dashed #5aa6ff; border-radius: 20px;">
            @RenderBody()
        </div>
    </div>
    
    <footer class="text-center py-4 mt-5" style="background:#f8fafc; color:#4287f5;">
        <div class="container">
            &copy; 2025 - Biblioteka Online - Panel Administratora <span style="font-size: 1rem; margin: 0 5px;">💙</span>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 