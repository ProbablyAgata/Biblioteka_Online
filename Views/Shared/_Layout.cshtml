<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteka Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblioteka_online.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="background:#e0f0ff; color:#4287f5; padding:1rem 0; box-shadow: 0 2px 10px rgba(66, 135, 245, 0.15);">
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: 700; color: #4287f5; display: flex; align-items: center;">
                    <span style="font-size: 1.5rem; margin-right: 8px;">📚</span> Biblioteka Online
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: #4287f5; font-weight: 600; display: flex; align-items: center;">
                                <span style="font-size: 1rem; margin-right: 5px;">🏠</span> Strona główna
                            </a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Borrowings" asp-action="Index" style="color: #4287f5; font-weight: 600; display: flex; align-items: center;">
                                    <span style="font-size: 1rem; margin-right: 5px;">📋</span> Moje wypożyczenia
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Borrowings" asp-action="AdminPanel" style="color: #4287f5; font-weight: 600; display: flex; align-items: center;">
                                        <span style="font-size: 1rem; margin-right: 5px;">⚙️</span> Panel administratora
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login" style="color: #4287f5; font-weight: 600; display: flex; align-items: center;">
                                    <span style="font-size: 1rem; margin-right: 5px;">🔑</span> Zaloguj się
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register" style="color: #4287f5; font-weight: 600; display: flex; align-items: center;">
                                    <span style="font-size: 1rem; margin-right: 5px;">✏️</span> Zarejestruj się
                                </a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="ms-auto">
                            <button type="submit" class="btn-logout" style="display: flex; align-items: center;">
                                <span style="font-size: 1rem; margin-right: 5px;">🚪</span> Wyloguj się
                            </button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            <div class="card" style="border-radius: 20px; box-shadow: 0 4px 15px rgba(66, 135, 245, 0.1); padding: 2rem; margin-bottom: 2rem; border: none;">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="text-center py-4 mt-5" style="background:#f8fafc; color:#4287f5;">
        <div class="container">
            &copy; 2025 - Biblioteka Online <span style="font-size: 1rem; margin: 0 5px;">💙</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
