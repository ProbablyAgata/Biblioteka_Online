@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteka Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header style="background:#e0f0ff; color:#4287f5; padding:1rem 0; box-shadow: 0 2px 10px rgba(66, 135, 245, 0.15);">
        <div class="container d-flex justify-content-between align-items-center">
            <h2 style="margin:0; color:#4287f5; font-weight: 700; display: flex; align-items: center;">
                <span style="font-size: 1.5rem; margin-right: 8px;">📚</span> Biblioteka Online
            </h2>
            <div class="d-flex align-items-center">
                <nav class="me-4">
                    <a href="/Home/UserHome" class="btn me-2" style="border-radius:25px; font-weight:600; color:#4287f5; border: 2px solid #4287f5; padding: 8px 16px;">
                        <span style="font-size: 1rem; margin-right: 5px;">🏠</span> Strona główna
                    </a>
                    <a href="/Borrowings/Index" class="btn" style="border-radius:25px; font-weight:600; color:#4287f5; border: 2px solid #4287f5; padding: 8px 16px;">
                        <span style="font-size: 1rem; margin-right: 5px;">📋</span> Moje wypożyczenia
                    </a>
                </nav>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn-logout" style="display: flex; align-items: center;">
                        <span style="font-size: 1rem; margin-right: 5px;">🚪</span> Wyloguj się
                    </button>
                </form>
            </div>
        </div>
    </header>
    <div class="container mt-4">
        <div class="card" style="border-radius: 20px; box-shadow: 0 4px 15px rgba(66, 135, 245, 0.1); padding: 2rem; margin-bottom: 2rem; border: none;">
            @RenderBody()
        </div>
    </div>

    <footer class="text-center py-4 mt-5" style="background:#f8fafc; color:#4287f5;">
        <div class="container">
            &copy; 2025 - Biblioteka Online <span style="font-size: 1rem; margin: 0 5px;">💙</span>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 