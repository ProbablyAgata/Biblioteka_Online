@model IEnumerable<BibliotekaOnline.Models.Book>
@{
    ViewData["Title"] = "Katalog książek";
}

<div class="mb-4">
    <h2>Książki dostępne w bibliotece</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Szukaj książki lub autora..." value="@ViewBag.Search" />
            <button type="submit" class="btn btn-primary">Szukaj</button>
        </div>
    </form>
    
    @if (!string.IsNullOrEmpty(ViewBag.Search))
    {
        <div class="alert alert-info">
            Wyniki wyszukiwania dla: <strong>@ViewBag.Search</strong>
            <a href="@Url.Action("Index")" class="float-end">Wyczyść</a>
        </div>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-light">
            <tr>
                <th>Tytuł</th>
                <th>Autor</th>
                <th>Dostępnych sztuk</th>
                <th>Szczegóły</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(book.ThumbnailUrl))
                        {
                            <img src="@book.ThumbnailUrl" alt="@book.Title" class="me-2" style="height: 40px; width: auto;">
                        }
                        @book.Title
                    </div>
                </td>
                <td>@book.Author</td>
                <td><span class="badge bg-primary">@book.TotalCopies</span></td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-outline-primary">Szczegóły</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Brak książek w bibliotece.
    </div>
}
