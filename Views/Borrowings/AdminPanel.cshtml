@model IEnumerable<BibliotekaOnline.Models.Borrowing>
@{
    ViewData["Title"] = "Panel administratora - wypożyczenia";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="mb-4">Panel administratora – wypożyczenia</h2>
<a class="btn" style="background-color: #a259c6; color: white; border-radius: 20px; padding: 8px 16px; font-weight: 600;" href="/Borrowings/Create">Nowe wypożyczenie</a>
<table class="table">
    <thead>
        <tr>
            <th>Użytkownik</th>
            <th>Książka</th>
            <th>Do zwrotu</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.User?.Email</td>
                <td>
                    <a href="@Url.Action("Details", "Books", new { id = item.Book?.Id })" class="text-decoration-none">
                        <strong>@(item.Book?.Title ?? "Brak tytułu")</strong>
                </td>
            <td>@(item.ReturnDate != null ? item.ReturnDate.Value.ToShortDateString() : "")</td>
            <td>
                <span class="badge @(item.Returned ? "bg-success" : "bg-primary")" style="padding: 8px 12px; border-radius: 12px;">
                    @(item.Returned ? "Zwrócono" : "Wypożyczona")
                </span>
            </td>
            <td>
                @if (!item.Returned)
                {
                    <form asp-action="MarkReturned" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm" style="background-color: #a259c6; color: white; border-radius: 15px;">
                            Oznacz jako zwrócone
                        </button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

