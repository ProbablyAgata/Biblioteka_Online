@model BibliotekaOnline.Models.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}
<div class="card" style="max-width: 450px; margin: 2rem auto; border-radius: 25px; border: 2px solid #e0f0ff; box-shadow: 0 6px 20px rgba(66, 135, 245, 0.12);">
    <div style="text-align: center; margin-bottom: 1.5rem;">
        <div style="font-size: 3rem; margin: 1rem 0;">✏️</div>
        <h2 style="font-size: 1.8rem; color: #4287f5; margin-bottom: 0.5rem;">Zarejestruj się</h2>
        <p style="color: #5a7d9a; margin-bottom: 1.5rem;">Dołącz do naszej społeczności czytelników</p>
    </div>
    
    <form asp-action="Register" method="post">
        <div class="form-group" style="margin-bottom: 1.2rem;">
            <label asp-for="Email" style="color: #4287f5; font-weight: 600; margin-bottom: 0.5rem; display: flex; align-items: center;">
                <span style="font-size: 1.2rem; margin-right: 8px;">📧</span> Email
            </label>
            <input asp-for="Email" class="form-control" autocomplete="username" style="border-radius: 15px; border: 2px solid #e0f0ff; padding: 10px 15px; transition: all 0.3s ease;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom: 1.2rem;">
            <label asp-for="Password" style="color: #4287f5; font-weight: 600; margin-bottom: 0.5rem; display: flex; align-items: center;">
                <span style="font-size: 1.2rem; margin-right: 8px;">🔒</span> Hasło
            </label>
            <input asp-for="Password" class="form-control" autocomplete="new-password" style="border-radius: 15px; border: 2px solid #e0f0ff; padding: 10px 15px; transition: all 0.3s ease;" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label asp-for="ConfirmPassword" style="color: #4287f5; font-weight: 600; margin-bottom: 0.5rem; display: flex; align-items: center;">
                <span style="font-size: 1.2rem; margin-right: 8px;">🔐</span> Potwierdź hasło
            </label>
            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" style="border-radius: 15px; border: 2px solid #e0f0ff; padding: 10px 15px; transition: all 0.3s ease;" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-block" style="width:100%; background: linear-gradient(90deg, #4287f5 0%, #0056b3 100%); border-radius: 20px; padding: 12px; font-size: 1.1rem; font-weight: 600; margin-bottom: 1rem;">
            <span style="font-size: 1.2rem; margin-right: 8px;">✨</span> Zarejestruj się
        </button>
    </form>
    <div style="text-align:center; margin-top:1rem; margin-bottom: 1rem; padding: 10px; background: #f8fcff; border-radius: 0 0 25px 25px; border-top: 1px solid #e0f0ff;">
        <span style="color: #5a7d9a;">Masz już konto?</span> 
        <a href="/Account/Login" style="color: #4287f5; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; margin-left: 5px;">
            <span style="margin-right: 3px;">Zaloguj się</span> <span style="font-size: 1rem;">🔑</span>
        </a>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 