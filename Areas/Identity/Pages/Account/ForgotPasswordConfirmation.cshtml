@page
@using BibliotekaOnline.Areas.Identity.Pages.Account
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Email wysłany";
}

<div class="modern-header">
    <h2>📧 @ViewData["Title"]</h2>
    <p>Link do resetowania hasła został wysłany na Twój adres email</p>
</div>

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="modern-card">
            <div class="success-box text-center">
                <h4>✅ Sprawdź swoją skrzynkę pocztową</h4>
                <p class="mb-3">Wysłaliśmy link do resetowania hasła na Twój adres email. Kliknij link w wiadomości, aby ustawić nowe hasło.</p>
                
                <div class="info-box mt-4">
                    <h6>📋 Co dalej?</h6>
                    <div class="d-flex align-items-start mb-2">
                        <span class="me-2">📬</span>
                        <span>Sprawdź folder "Odebrane" w swojej skrzynce pocztowej</span>
                    </div>
                    <div class="d-flex align-items-start mb-2">
                        <span class="me-2">🗂️</span>
                        <span>Jeśli nie widzisz wiadomości, sprawdź folder "Spam"</span>
                    </div>
                    <div class="d-flex align-items-start mb-2">
                        <span class="me-2">🔗</span>
                        <span>Kliknij link w wiadomości email</span>
                    </div>
                    <div class="d-flex align-items-start">
                        <span class="me-2">🔑</span>
                        <span>Ustaw nowe, bezpieczne hasło</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="modern-card">
            <div class="warning-box">
                <h6>⚠️ Nie otrzymałeś wiadomości?</h6>
                <p class="mb-2">Jeśli wiadomość nie dotarła w ciągu kilku minut:</p>
                <ul class="mb-3">
                    <li>Sprawdź folder spam/junk</li>
                    <li>Upewnij się, że podałeś prawidłowy adres email</li>
                    <li>Spróbuj ponownie za kilka minut</li>
                </ul>
                <div class="text-center">
                    <a asp-page="./ForgotPassword" class="modern-btn modern-btn-outline">
                        🔄 Wyślij ponownie
                    </a>
                    <a asp-page="./Login" class="modern-btn">
                        👈 Powrót do logowania
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 