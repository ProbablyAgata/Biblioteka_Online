@page
@using BibliotekaOnline.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="modern-header">
    <h2>🔑 @ViewData["Title"]</h2>
    <p>Zaloguj się do swojego konta i odkrywaj świat książek</p>
</div>

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="modern-card">
            <div class="text-center mb-4">
                <h4>Witaj ponownie!</h4>
            </div>
            
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="modern-alert modern-alert-danger" role="alert"></div>
                
                <div class="modern-form-group">
                    <label asp-for="Input.Email" class="modern-label">
                        📧 Email
                    </label>
                    <input asp-for="Input.Email" class="modern-input" autocomplete="username" aria-required="true" placeholder="Wprowadź swój adres email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="modern-form-group">
                    <label asp-for="Input.Password" class="modern-label">
                        🔒 Hasło
                    </label>
                    <input asp-for="Input.Password" class="modern-input" autocomplete="current-password" aria-required="true" placeholder="Wprowadź swoje hasło" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="modern-form-group">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            💾 @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                
                <button id="login-submit" type="submit" class="modern-btn w-100 mb-3">
                    🚀 Zaloguj się
                </button>
                
                <div class="text-center">
                    <p class="mb-2">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="modern-nav-link">
                            ❓ Zapomniałeś hasła?
                        </a>
                    </p>
                </div>
            </form>
        </div>
        
        <div class="modern-card">
            <div class="info-box text-center">
                <h5>🎉 Nowy użytkownik?</h5>
                <p>Utwórz konto i otrzymaj dostęp do tysięcy książek!</p>
                <a asp-page="./Register" class="modern-btn modern-btn-outline">
                    🌟 Dołącz do nas
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 