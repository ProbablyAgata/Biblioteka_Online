@page
@using BibliotekaOnline.Areas.Identity.Pages.Account
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Zapomniałeś hasła?";
}

<div class="modern-header">
    <h2>🔑 @ViewData["Title"]</h2>
    <p>Wprowadź swój adres email, a wyślemy Ci link do resetowania hasła</p>
</div>

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="modern-card">
            <div class="text-center mb-4">
                <h4>Resetowanie hasła</h4>
                <p class="text-muted">Nie martw się, zdarza się każdemu!</p>
            </div>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="modern-alert modern-alert-danger" role="alert"></div>
                
                <div class="modern-form-group">
                    <label asp-for="Input.Email" class="modern-label">
                        📧 Adres email
                    </label>
                    <input asp-for="Input.Email" class="modern-input" autocomplete="email" aria-required="true" placeholder="Wprowadź swój adres email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <button type="submit" class="modern-btn w-100 mb-3">
                    📤 Wyślij link resetujący
                </button>
                
                <div class="text-center">
                    <p class="mb-2">
                        <a asp-page="./Login" class="modern-nav-link">
                            👈 Powrót do logowania
                        </a>
                    </p>
                </div>
            </form>
        </div>
        
        <div class="modern-card">
            <div class="info-box">
                <h6>💡 Jak to działa?</h6>
                <div class="d-flex align-items-start mb-2">
                    <span class="me-2">1️⃣</span>
                    <span>Wprowadź swój adres email</span>
                </div>
                <div class="d-flex align-items-start mb-2">
                    <span class="me-2">2️⃣</span>
                    <span>Sprawdź swoją skrzynkę pocztową</span>
                </div>
                <div class="d-flex align-items-start mb-2">
                    <span class="me-2">3️⃣</span>
                    <span>Kliknij link w wiadomości email</span>
                </div>
                <div class="d-flex align-items-start">
                    <span class="me-2">4️⃣</span>
                    <span>Ustaw nowe hasło</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 